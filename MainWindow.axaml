<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilitiesManager"
        mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="320"
        x:Class="UtilitiesManager.MainWindow"
        x:DataType="local:MainWindow"
        Title="UtilitiesManager"
        WindowStartupLocation="CenterScreen"
        Icon="avares://UtilitiesManager/UtilManagerV3.png"
>

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Margin" Value="0,5,0,1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Slider">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="180"/>
        </Style>
    </Window.Styles>

    <StackPanel Margin="25,35,25,25"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                MaxWidth="420">
        <TextBlock Text="Utility Manager v0.0 – "
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        
        <TextBlock Text="Slider 1 – Sound Level"/>
        <Slider Minimum="0" Maximum="100"
                Value="{Binding SoundLevel}"
                TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding SoundLevel, StringFormat='Volume {0:F0}%'}"
                   HorizontalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#000000"/>
        
        <TextBlock Text="Slider 2 – Screen Brightness"/>
        <Slider Minimum="0" Maximum="100"
                Value="{Binding Brightness}"
                TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding Brightness, StringFormat='Brightness: {0:F0}% – '}"
                   HorizontalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#000000"/>

        <!-- The new button that saves your soul -->
        <Button Content="Open Battery Menu"
                Click="OpenBattery_Click" />
    </StackPanel>
</Window>